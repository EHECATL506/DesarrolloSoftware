              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Otros">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#verNotificaciones" text="Notificaciones" />
                  <MenuItem mnemonicParsing="false" onAction="#verPromociones" text="Promociones" />
              </items>
            </Menu>
